<h1>Top 5 Recipients Countries </h1>

<% if @shipments%>

  <table border="1" style="border-collapse: collapse">
    <thead>
      <tr>
        <th>Country</th>
        <th>Total Received</th>
      </tr>
    </thead>
  <tbody>
  <% @shipments.each do |shipment| %>
   <tr>
      <td><%= shipment.country %></td>
      <td><%= shipment.total %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
<%else%>
    <p><span style="color: #ff0000;">No data to show</span></p>
<%end%>

